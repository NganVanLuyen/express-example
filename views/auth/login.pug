extends ../layouts/common.pug
block content
    h1 Login 
    
    if errors 
        each error in errors
            .alert.alert-danger= error

    form(action="/auth/login", method="POST")
        .form-group
            label(for="email") Email
            input#name.form-control.my-2(name="email", type="text", value=values ? values.email : "")

        .form-group
            label(for="password") Password
            input#phone.form-control.my-2(name="password", type="password", value=values ? values.password : "")    

        button.btn.btn-primary Login  